<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.musicpan.mapper.BoardAttachMapper">

	<insert id="insert">
		insert into
			file_${b_name}
			(
				uuid
				, uploadpath
				, filename
				,filetype
				, bno
			)
		values
			(
				#{uuid}
				, #{uploadPath}
				, #{fileName}
				, #{fileType}
				, #{bno}
			)
	</insert>

	<delete id="delete">

		delete from
			file_${b_name}
		where
			uuid = #{uuid}

	</delete>

	<select id="findByBno" resultType="com.musicpan.domain.BoardAttachVO">
		select
			*
		from
			file_${b_name}
		where
			bno = #{bno}
	</select>

	<delete id="deleteAll">

		delete
			file_${b_name}
		where
			bno = #{bno}

	</delete>

	<select id="getOldFiles" resultType="com.musicpan.domain.BoardAttachVO">

		select
			*
		from
			file_${b_name}
		where
			uploadpath = to_char(sysdate -1 ,'yyyy\mm\dd')

	</select>


</mapper>
